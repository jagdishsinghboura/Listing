<%= layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <h1>edit your listing</h1>
            <form method="post" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate
                enctype="multipart/form-data">
                <div>
                    <label for="title" class="form-label"></label>
                    <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required>
                </div>
                <div>
                    <label for="description" class="form-label"></label>
                    <textarea name="listing[description]" type="text" class="form-control"
                        required><%=listing.description%></textarea>
                </div>
                <div class="mb-4">
                    Original Listing Image <Hr>      </Hr>
                    <img src="<%=originalImageUrl%>" alt="">
                </div>
                <div>
                    <label for="image" class="form-label">Upload new Image</label>
                    <input name="listing[image]" type="file" class="form-control">
                </div>
                <div>
                    <label for="price" class="form-label"></label>
                    <input name="listing[price]" value="<%=listing.price%>" type="number" class="form-control" required>
                </div>
                <div>
                    <label for="location" class="form-label"></label>
                    <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control"
                        required>
                </div>
                <div>
                    <label for="country" class="form-label"></label>
                    <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control"
                        required>

                </div>


                <button class="btn btn-primary m-4" type="submit">Submit form</button>
            </form>
        </div>
    </div>